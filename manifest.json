{
  "manifest_version": 2,

  "name": "Envato Notifier",
  "description": "Show a notification when you get a new sale/comment on envato marketplace. (Powered by Envato API.)",
  "version": "0.8",
  "homepage_url": "http://mustafaismail.co",

  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  },

  "background": {
    "page": "background.html"
  },

  "browser_action": {
    "default_icon": "images/icon16.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "identity",
    "storage",
    "notifications",
    "tabs",
    "https://*.envato.com/*",
    "http://themeforest.net/*"
  ],

  "key": ""

}
